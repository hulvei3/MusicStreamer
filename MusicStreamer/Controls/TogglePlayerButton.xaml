<ToggleButton x:Class="MusicStreamer.Controls.TogglePlayerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="toggle">
    <Grid>
            <StackPanel Orientation="Horizontal" Margin="0">
            <Image Source="{Binding ElementName=toggle, Path=Image}"
                       Width="{Binding ElementName=toggle, Path=ImageWidth}"
                       Height="{Binding ElementName=toggle, Path=ImageHeight}"
                       Name="image"/>
            <TextBlock Text="{Binding ElementName=toggle, Path=Text}"
                           Margin="0,0,0,0"/>
            </StackPanel>
    </Grid>
</ToggleButton>

<Window x:Class="MusicStreamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicStreamer" Height="465" Width="745" Name="windowMain" ResizeMode="CanResizeWithGrip">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="Black" Offset="0" />
            <GradientStop Color="White" Offset="0.828" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        
    </Window.Resources>
    
    <Grid Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="414" />
            <ColumnDefinition Width="49" />
            <ColumnDefinition Width="293*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="124" />
            <RowDefinition Height="8" />
            <RowDefinition Height="270*" />
            <RowDefinition Height="24*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Name="gridServer" HorizontalAlignment="Left" Width="457" Grid.ColumnSpan="2">
            <TextBox Margin="6,36,1,6" Name="textBox1" Text="Playlist" TextAlignment="Center" FontSize="32" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" Opacity="0.5" />
            <TextBox Name="textBoxIP" Text="90.184.75.15" Margin="6,0,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" ToolTip="Put host address here" />
            <TextBox Name="textBoxUser" Text="Username..." Margin="107,0,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="101" ToolTip="Put FTP-username here" />
            <TextBox Name="textBoxPassword" Text="Password..." Margin="208,0,0,0" HorizontalAlignment="Left" Width="89" Height="22" VerticalAlignment="Top" ToolTip="Put FTP-password here" />
            <Button Content="indsæt url" Name="buttonConnect" Click="buttonConnect_Click" Margin="308,0,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="143" ToolTip="Connects to the server" />
        </Grid>
        <Grid Height="124" Name="gridPlayer" VerticalAlignment="Top" HorizontalAlignment="Left" Width="457" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="414*" />
                <ColumnDefinition Width="43*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="46*" />
                <RowDefinition Height="48*" />
                <RowDefinition Height="38*" />
            </Grid.RowDefinitions>
            
            <Slider Value="{Binding Path=Player.Volume}" Grid.RowSpan="3" Height="103" HorizontalAlignment="Left" Margin="14,15,0,0" Name="sliderVolume" VerticalAlignment="Top" Width="23" Orientation="Vertical" Maximum="100" Grid.Column="1" SmallChange="1" LargeChange="10" />
            
            <Button Command="{Binding CurrentSong.PrevCommand}" Content="Prev" Name="buttonPrev" VerticalAlignment="Top" Margin="12,0,345,0" Grid.Row="1" Height="45" CommandParameter="{Binding ElementName=textBoxCurrentSong, Path=Text}" />
            <Button Command="{Binding CurrentSong.StopCommand}" Content="Stop" Name="buttonStop" VerticalAlignment="Top" Margin="71,0,288,0" Height="45" Grid.Row="1" />
            <Button Command="{Binding CurrentSong.PlayCommand}" Content="Play" Height="45" Margin="128,0,227,0" Name="buttonPlay" VerticalAlignment="Top" Grid.Row="1" CommandParameter="{Binding ElementName=textBoxCurrentSong, Path=Text}" />
            <Button Command="{Binding CurrentSong.SkipCommand}" Content="Next" Height="45" Margin="189,0,166,0" Name="buttonNext" VerticalAlignment="Top" Grid.Row="1" />
            <Button Content="Shuffle" Height="45" Margin="321,0,47,0" Name="buttonShuffle" VerticalAlignment="Top" Grid.Row="1" />
            <Button Content="Repeat" Height="45" Margin="368,0,0,0" Name="buttonRepeat" VerticalAlignment="Top" Grid.Row="1" />


            <TextBox FontSize="18" FontWeight="Bold" Height="32" IsReadOnly="True" Margin="249,5,0,0" MaxLines="1" Name="textBoxTime" Opacity="0.7" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" HorizontalAlignment="Left" Width="71" />

        </Grid>
        <Slider Height="23" HorizontalAlignment="Left" Margin="12,99,0,0" Name="sliderSeeker" VerticalAlignment="Top" Width="402" Maximum="400" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,15,0,0" Name="textBoxCurrentSong" VerticalAlignment="Top" Width="402" Text="{Binding Path=CurrentSong.Url}" />
        <Grid Grid.Column="2" Name="gridPlaylist" Grid.RowSpan="3">
            <TextBox Name="textBox2" Text="Server" FontSize="32" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Margin="0,6,6,6" Opacity="0.5" FontFamily="Segoe UI" />
        </Grid>
        <StatusBar Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="0,1,0,0" Name="statusBar" VerticalAlignment="Top" Width="723" Grid.ColumnSpan="3" >
            <StatusBarItem >
                <TextBlock Text="{Binding Path=CurrentSong.DebugText}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

